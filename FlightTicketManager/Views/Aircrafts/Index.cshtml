@model IEnumerable<FlightTicketManager.Data.Entities.Aircraft>

@{
    ViewData["Title"] = "Index";
}

<h1>Aircrafts List</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">
        <i class="fa-solid fa-plus"></i> Add Aircraft
    </a>
</p>
<div class="card-container" style="justify-content: flex-start;">
    <div class="card">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Description)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Airline)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Capacity)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ImageUrl)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.IsActive)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="text-center align-middle">
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                        <td class="text-center align-middle">
                            @Html.DisplayFor(modelItem => item.Airline)
                        </td>
                        <td class="text-center align-middle">
                            @Html.DisplayFor(modelItem => item.Capacity)
                        </td>
                        <td class="text-center align-middle" style="width:100px;height:130px;max-width:100%;height:auto;">
                            @if (!string.IsNullOrEmpty(item.ImageFullPath))
                            {
                                <img src="@Url.Content(item.ImageFullPath)" alt="Image" style="width:100px;height:130px;max-width:100%;height:auto;">
                            }
                        </td>
                        <td class="text-center align-middle">
                            @Html.DisplayFor(modelItem => item.IsActive)
                        </td>
                        <td class="text-center align-middle">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-edit" style="width: auto">
                                <i class="fa-solid fa-pen-to-square"></i> Edit
                            </a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info" style="width: auto">
                                <i class="fa-solid fa-list"></i> Details
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger" style="width: auto">
                                <i class="fa-solid fa-trash"></i> Delete
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>