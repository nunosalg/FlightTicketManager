@model ChangeSeatViewModel

<h2>Change Seat</h2>

<form asp-action="ChangeSeat" method="post">
    <input type="hidden" asp-for="TicketId" />
    <input type="hidden" asp-for="FlightId" />

    <div class="form-group">
        <label>Current Seat</label>
        <input asp-for="CurrentSeat" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label for="NewSeat">Select New Seat</label>
        <select asp-for="NewSeat" class="form-control" asp-items="@(new SelectList(Model.AvailableSeats))">
            <option value="">-- Select a seat --</option>
        </select>
        <span asp-validation-for="NewSeat" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Change Seat</button>
</form>