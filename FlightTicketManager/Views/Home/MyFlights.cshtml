@model IEnumerable<FlightTicketManager.Data.Entities.Ticket>

@{
    ViewData["Title"] = "My Flights";
}

<h1 class="text-center">@ViewData["Title"]</h1>
@if (!Model.Any())
{
    <p class="text-center">You have no future flights.</p>
}
else
{
    <div class="card-container">
        <div class="card">
            <table class="table table-striped table-hover">
                <thead class="text-center align-middle">
                    <tr class="text-center align-middle">
                        <th class="text-center align-middle">
                            @Html.DisplayNameFor(model => model.Flight.FlightNumber)
                        </th>
                        <th class="text-center align-middle">
                            @Html.DisplayNameFor(model => model.Flight.Origin)
                        </th>
                        <th class="text-center align-middle">
                            @Html.DisplayNameFor(model => model.Flight.Destination)
                        </th>
                        <th class="text-center align-middle">
                            @Html.DisplayNameFor(model => model.Flight.DepartureDateTime)
                        </th>
                        <th class="text-center align-middle">
                            @Html.DisplayNameFor(model => model.Flight.FlightDuration)
                        </th>
                        <th class="text-center align-middle">
                            @Html.DisplayNameFor(model => model.Flight.Aircraft)
                        </th>
                        <th class="text-center align-middle">
                            @Html.DisplayNameFor(model => model.Seat)
                        </th>
                        <th class="text-center align-middle">
                            @Html.DisplayNameFor(model => model.PassengerName)
                        </th>
                        <th class="text-center align-middle">
                            @Html.DisplayNameFor(model => model.PassengerId)
                        </th>
                        <th class="text-center align-middle">
                            @Html.DisplayNameFor(model => model.PassengerBirthDate)
                        </th>
                        <th class="text-center align-middle">
                            @Html.DisplayNameFor(model => model.Price)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="text-center align-middle">
                            <td class="text-center align-middle">
                                @Html.DisplayFor(modelItem => item.Flight.FlightNumber)
                            </td>
                            <td class="text-center align-middle" style="width: 200px;">
                                @Html.DisplayFor(modelItem => item.Flight.Origin.Name)
                                <img id="flagImageOrigin" src="@Url.Content(item.Flight.Origin.FlagUrl)" alt="Image" style="width:50px;height:30px;max-width:100%;height:auto"> <br />
                                @Html.DisplayFor(modelItem => item.Flight.OriginAirport)
                            </td>
                            <td class="text-center align-middle" style="width: 200px;">
                                @Html.DisplayFor(modelItem => item.Flight.Destination.Name)
                                <img id="flagImageDestination" src="@Url.Content(item.Flight.Destination.FlagUrl)" alt="Image" style="width:50px;height:30px;max-width:100%;height:auto"> <br />
                                @Html.DisplayFor(modelItem => item.Flight.DestinationAirport)
                            </td>
                            <td class="text-center align-middle">
                                @Html.DisplayFor(modelItem => item.Flight.DepartureDateTime)
                            </td>
                            <td class="text-center align-middle">
                                @Html.DisplayFor(modelItem => item.Flight.FlightDuration)
                            </td>
                            <td class="text-center align-middle">
                                @Html.DisplayFor(modelItem => item.Flight.Aircraft.Data)
                            </td>
                            <td class="text-center align-middle">
                                @Html.DisplayFor(modelItem => item.Seat)
                            </td>
                            <td class="text-center align-middle">
                                @Html.DisplayFor(modelItem => item.PassengerName)
                            </td>
                            <td class="text-center align-middle">
                                @Html.DisplayFor(modelItem => item.PassengerId)
                            </td>
                            <td class="text-center align-middle">
                                @Html.DisplayFor(modelItem => item.PassengerBirthDate)
                            </td>
                            <td class="text-center align-middle">
                                @Html.DisplayFor(modelItem => item.Price)
                            </td>
                            <td class="text-center align-middle">
                                <div class="d-flex flex-column gap-2">
                                    <a asp-action="ChangeSeat" asp-route-id="@item.Id" class="btn btn-primary">
                                        <i class="fa-solid fa-chair"></i> Change Seat
                                    </a>
                                    <a asp-action="CancelTicket" asp-route-id="@item.Id" class="btn btn-danger">
                                        <i class="fa-solid fa-trash"></i> Cancel Ticket
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}