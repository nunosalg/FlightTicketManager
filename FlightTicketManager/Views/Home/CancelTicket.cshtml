@model FlightTicketManager.Data.Entities.Ticket

@{
    ViewData["Title"] = "CancelTicket";
}

<h1>Cancel Ticket</h1>

<form asp-action="CancelTicket">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label>Flight Number</label>
        <p>@Model.Flight.FlightNumber</p>
    </div>

    <div class="form-group">
        <label>Seat</label>
        <p>@Model.Seat</p>
    </div>

    <div class="form-group">
        <label>Passenger Name</label>
        <p>@Model.PassengerName</p>
    </div>

    <div class="form-group">
        <label>Departure</label>
        <p>@Model.Flight.DepartureDateTime</p>
    </div>

    <div class="form-group">
        <label>Origin</label>
        <p>@Model.Flight.Origin.Name</p>
    </div>

    <div class="form-group">
        <label>Destination</label>
        <p>@Model.Flight.Destination.Name</p>
    </div>

    <p>Are you sure you want to cancel this ticket?</p>

    <div class="form-group">
        <button type="submit" class="btn btn-danger">Confirm Cancellation</button>
        <a asp-action="MyFlights" class="btn btn-secondary">Cancel</a>
    </div>
</form>