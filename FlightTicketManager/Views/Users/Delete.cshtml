@model FlightTicketManager.Data.Entities.User

@{
    ViewData["Title"] = "Delete User";
}

<h1 class="text-center">@ViewData["Title"]</h1>

<div class="card-container">
    <div class="card">
        <h2 class="card-title text-center">Are you sure you want to delete this user?</h2>
        <hr />

        <div class="mb-2">
            <strong>@Html.DisplayNameFor(model => model.Fullname)</strong>
            @Html.DisplayFor(model => model.Fullname)
        </div>

        <div class="mb-2">
            <strong>@Html.DisplayNameFor(model => model.Email)</strong>
            @Html.DisplayFor(model => model.Email)
        </div>

        <hr />
        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="Id" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <button type="submit" class="btn btn-danger" style="width: auto">
                <i class="fa-solid fa-trash"></i> Delete
            </button>
            <a asp-action="Index" class="btn btn-secondary" style="width: auto">
                <i class="fa-solid fa-arrow-left"></i> Cancel
            </a>
        </form>

    </div>
</div>