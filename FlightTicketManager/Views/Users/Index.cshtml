@model IEnumerable<FlightTicketManager.Models.UserRoleViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Users List</h1>
<p>
    <a asp-action="Create" class="btn btn-primary">
        <i class="fa-solid fa-plus"></i> Add User
    </a>
</p>
<div class="card-container" style="justify-content: flex-start;">
    <div class="card">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.FullName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Email)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Roles)
                    </th>
                    <th>
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="text-center align-middle">
                            @Html.DisplayFor(modelItem => item.FullName)
                        </td>
                        <td class="text-center align-middle">
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td class="text-center align-middle">
                            @Html.DisplayFor(modelItem => item.Roles)
                        </td>
                        <td class="text-center align-middle">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-edit" style="width: auto">
                                <i class="fa-solid fa-pen-to-square"></i> Edit
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger" style="width: auto">
                                <i class="fa-solid fa-trash"></i> Delete
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>