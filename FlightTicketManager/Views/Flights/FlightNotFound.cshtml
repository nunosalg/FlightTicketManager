
@{
    ViewData["Title"] = "Flight Not Found";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 text-center">
            <h1 class="display-4 text-danger">Error: @ViewData["Title"]</h1>
            <h3>
                Check the flight id.
            </h3>
            <a href="@Url.Action("Index", "Flights")" class="btn btn-primary mt-3" style="width:auto">
                <i class="fa-solid fa-plane-departure"></i> Flights
            </a>
            <a href="javascript:history.back()" class="btn btn-secondary mt-3" style="width:auto">
                <i class="fas fa-arrow-left"></i> Go Back
            </a>
        </div>
    </div>
</div>